<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/bg_products_list_item"
    android:orientation="vertical"
    android:paddingHorizontal="8dp"
    android:paddingVertical="8dp">


    <ImageView
        android:id="@+id/image_products_item"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/max_way_text"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_nrl"
        android:layout_marginTop="16dp"
        android:ellipsize="marquee"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Max Box" />

    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_nrl"
        android:background="@drawable/bg_search_view"
        android:gravity="center"
        android:padding="@dimen/margin_std"
        android:textColor="@color/black"
        tools:text="23 000 sum" />

</LinearLayout>